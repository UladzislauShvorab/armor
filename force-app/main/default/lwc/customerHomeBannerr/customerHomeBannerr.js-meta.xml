<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Customer Home Banner</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__HomePage</target>
        <target>lightning__AppPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <!-- IMAGE PROPERTIES -->
            <property
                name="showBackgroundImage"
                type="Boolean"
                label="Show Background Image"
                default="false" />
            <property
                name="backgroundImage"
                type="ContentReference"
                label="Background Image"
                filter="cms_image" />
            <property
                name="tabletBackgroundImage"
                type="ContentReference"
                label="Tablet Background Image (1024px and below)"
                filter="cms_image" />
            <property
                name="mobileBackgroundImage"
                type="ContentReference"
                label="Mobile Background Image (768px and below)"
                filter="cms_image" />
            <property
                name="backgroundColor"
                type="Color"
                label="Background Color"
                default="rgba(20, 20, 20, 1)" />

            <!-- BREADUMBS PROPERTIES -->
            <property
                name="showBreadcrumbs"
                type="Boolean"
                label="Show Breadcrumbs"
                default="true" />
            <property
                name="showTheFirstLevelBreadcrumb"
                type="Boolean"
                label="Show The First Level Breadcrumb"
                default="true" />
            <property
                name="theFirstLevelBreadcrumbLabel"
                type="String"
                label="The First Level Breadcrumb Label"
                default="Home" />
            <property
                name="theFirstLevelBreadcrumbLink"
                type="String"
                label="The First Level Breadcrumb Link"
                default="" />
            <property
                name="theFirstBreadcrumbLinkOpenLinkInNewTab"
                type="Boolean"
                label="Open The First Level Breadcrumb Link In The New Tab"
                default="false" />
            <property
                name="showTheSecondLevelBreadcrumb"
                type="Boolean"
                label="Show The Second Level Breadcrumb"
                default="true" />
            <property
                name="theSecondLevelBreadcrumbLabel"
                type="String"
                label="The Second Level Breadcrumb Label"
                default="Customer Home" />
            <property
                name="theSecondLevelBreadcrumbLink"
                type="String"
                label="The Second Level Breadcrumb Link"
                default="" />
            <property
                name="theSecondBreadcrumbLinkOpenLinkInNewTab"
                type="Boolean"
                label="Open The Second Level Breadcrumb Link In The New Tab"
                default="false" />
            <property
                name="showTheThirdLevelBreadcrumb"
                type="Boolean"
                label="Show The Third Level Breadcrumb"
                default="false" />
            <property
                name="theThirdLevelBreadcrumbLabel"
                type="String"
                label="The Third Level Breadcrumb Label" />
            <property
                name="theThirdLevelBreadcrumbLink"
                type="String"
                label="The Third Level Breadcrumb Link"
                default="" />
            <property
                name="theThirdBreadcrumbLinkOpenLinkInNewTab"
                type="Boolean"
                label="Open The Third Level Breadcrumb Link In The New Tab"
                default="false" />

            <!-- TEXTUAL PROPERTIES -->
            <property
                name="showTitle"
                type="Boolean"
                label="Show Title"
                default="true" />
            <property
                name="title"
                type="String"
                label="Title"
                default="Welcome back, {0}" />
            <property
                name="titleColor"
                type="Color"
                label="Title Color"
                default="rgb(255, 255, 255)" />
            <property
                name="maxTitleWidth"
                type="String"
                label="Max Title Width (rem, px)"
                default="33.25rem" />
            <property
                name="showDescription"
                type="Boolean"
                label="Show Description"
                default="true" />
            <property
                name="description"
                type="String"
                label="Description"
                default="Find support and guidance through software downloads, tools, articles and resources." />
            <property
                name="descriptionColor"
                type="Color"
                label="Description Color"
                default="rgb(255, 255, 255)" />
            <property
                name="maxDescriptionWidth"
                type="String"
                label="Max Description Width (rem, px)"
                default="33.25rem" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
